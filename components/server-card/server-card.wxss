.hidden {
    overflow: hidden;
    position: fixed;
    bottom: -410rpx;
    background: #fff;
    z-index: 1000;
    transition: all .3s;
}

.hidden.active {
    bottom: 0;
}

.hidden .ul-li {
    height: 52rpx;
    margin-top: 50rpx;
    position: relative;
}

.hidden .ul-li .close {
    position: absolute;
    width: 25rpx;
    height: 25rpx;
    right: 40rpx;
}

.hidden .ul-li .div {
    overflow: hidden;
    line-height: 52rpx;
    margin: 0 auto;
    display: flex;
}

.hidden .ul-li .div image,.h1 {
    float: left;
}

.hidden .ul-li .div image {
    width: 122rpx;
    height: 22rpx;
    margin-top: 16rpx;
}

.hidden .ul-li .div .h1 {
    margin: 0 34rpx;
    font-size: 34rpx;
    color: #6D84DD;
    height: 52rpx;
    line-height: 52rpx;
}

.hidden .ul-li .img-left {
    margin-left: 140rpx;
}

.server {
    overflow: hidden;
    padding-bottom: 25rpx;
}

.server .div {
    float: left;
    width: 310rpx;
    height: 100rpx;
    padding: 22rpx 10rpx 22rpx 45rpx;
}

.poscl {
    width: 100rpx;
    height: 100rpx;
    position: absolute;
    z-index: 999999;
    top: 0;
    right: 0;
}

.server .h3 {
    height: 47rpx;
    line-height: 47rpx;
    font-size: 30rpx;
    color: #6D6D6D;
}

.server .h3 image {
    float: left;
    width: 47rpx;
    height: 47rpx;
    margin-right: 19rpx;
}

.server .p {
    margin-top: 6rpx;
    height: 37rpx;
    line-height: 37rpx;
    font-size: 24rpx;
    color: #A1A1A1;
}

.pos {
    position: fixed;
    top: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0,0,0,0);
    z-index: 999;
    transition: all .3s;
    display: none;
}

.pos.active {
    display: block;
    background: rgba(0,0,0,.5);
    opacity: 1;
}

.clocs {
    position: absolute;
    z-index: 9999999;
    top: 40rpx;
    right: 40rpx;
    width: 25rpx;
    height: 25rpx;
}

.clocs image {
    width: 100%;
    height: 100%;
}