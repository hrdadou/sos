.search-wrap {
    width: 702rpx;
    height: 98rpx;
    margin: auto;
    background: #fff;
    border-radius: 10rpx 10rpx 0px 0px;
    position: relative;
    border-bottom: 1rpx solid #f0f0f0;
    box-sizing: border-box;
}

.model {
    position: absolute;
    top: 98rpx;
    width: 100vw!important;
    left: -24rpx;
    background: #fff;
    min-height: 50rpx;
    z-index: 999;
}

.search-wrap {
    display: flex;
    justify-content: space-between;
}

.search-wrap .view {
    text-align: center;
    font-size: 28rpx;
    color: #565656;
    width: 100%;
    height: 100%;
    line-height: 98rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.screen {
    width: 20rpx!important;
    height: 28rpx!important;
}

.search-wrap .view text.active {
    color: #6D84DD;
}

.search-wrap .view image {
    width: 14rpx;
    height: 8rpx;
    margin-left: 5rpx;
}

.modal-wrap {
    position: absolute;
    top: 98rpx;
    width: 100vw;
    height: 100vh;
    left: -24rpx;
    background: rgba(0,0,0,0.5);
    z-index: 998;
}

.type-list>view {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    padding-left: 64rpx;
    box-sizing: border-box;
    font-size: 28rpx;
    color: #6a6a6a;
}

.active {
    color: #6D84DD!important;
}

.goods-title {
    font-size: 28rpx;
    color: #565656;
}

.model-content {
    margin-top: 20rpx;
    padding-left: 64rpx;
    box-sizing: border-box;
    border-bottom: #f0f0f0 1rpx solid;
}

.select-item {
    width: 200rpx;
    height: 70rpx;
    background: rgba(247,248,250,1);
    border-radius: 8rpx;
    text-align: center;
    line-height: 70rpx;
    font-size: 28rpx;
    color: #6a6a6a;
    display: inline-block;
    margin: 20rpx 44rpx 20rpx 0;
}

.model-content input {
    width: 200rpx;
    height: 70rpx;
    background: rgba(247,248,250,1);
    border-radius: 8rpx;
    font-size: 28rpx;
    display: inline-block;
    text-align: center;
    color: #6a6a6a;
}

.inputer {
    display: flex;
    align-items: center;
    margin: 20rpx 0 40rpx;
}

.inputer .line {
    width: 24rpx;
    height: 1rpx;
    margin: 9rpx;
    background: rgba(86,86,86,1);
    border-radius: 1rpx;
}

.input {
    text-align: center;
    font-size: 28rpx;
    color: #A1A1A1;
}

.buttons {
    width: 100%;
    height: 97rpx;
    display: flex;
    justify-content: space-between;
    font-size: 30rpx;
}

.buttons view {
    width: 100%;
    line-height: 97rpx;
    text-align: center;
}

.buttons view:nth-child(1) {
    color: #6a6a6a;
}

.buttons view:nth-child(2) {
    color: #fff;
    background: #34343E;
}

.select-item.active {
    background: #6C6C79;
    color: #fff!important;
}

.intergal-nums {
    width: 14rpx!important;
    height: 20rpx!important;
}