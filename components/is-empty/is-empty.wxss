.wrap {
    min-width: 100rpx;
    min-height: 80rpx;
    position: fixed;
    left: 50%;
    top: 40%;
    transform: translate(-50%,-50%);
}

.wrap.pos {
    margin-top: 400rpx;
    position: relative!important;
}

.img {
    width: 240rpx;
    height: 240rpx;
    margin: auto;
}

.img image {
    width: 100%;
    height: 100%;
    display: block;
}

.text {
    font-size: 26rpx;
    color: #686868;
    margin-top: 26rpx;
    text-align: center;
}

.btn {
    padding: 20rpx 40rpx;
    text-align: center;
    font-size: 28rpx;
    color: #FFFFFF;
    background: linear-gradient(125.3deg,rgba(227,104,95,1),rgba(227,78,70,1));
    box-shadow: 0px 5rpx 7rpx 0rpx rgba(227,94,87,0.21);
    border-radius: 100rpx;
    background-size: 100% 100%;
    margin: auto;
    margin-top: 60rpx;
}