.kefu {
    width: 78rpx;
    height: 108rpx;
    z-index: 100;
    position: fixed;
    right: -108rpx;
    top: 300rpx;
    transition: right 1s;
}

.kefu.show {
    right: 0;
}

.kefu button {
    width: 100%;
    height: 100%;
    background: url('https://img.rekoon.cn/buy_ic_service.png') no-repeat;
    background-size: 100% 100%;
}

button::after {
    border: none;
}