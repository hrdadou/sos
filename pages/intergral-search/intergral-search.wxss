.wrapper {
    background: #fff;
    min-height: 100vh;
    box-sizing: border-box;
    padding-top: 90rpx;
}

.top-search {
    width: 100%;
    height: 90rpx;
    background: #fff;
    padding-top: 10rpx;
    position: fixed;
    top: 0;
    left: 50%;
    z-index: 999;
    margin-left: -375rpx;
}

.search-wrapper {
    margin: auto;
    width: 702rpx;
    height: 70rpx;
    background: #FAFAFA;
    border-radius: 8rpx;
    border: 1rpx solid rgba(239,239,239,1);
    display: flex;
    align-items: center;
}

.search-wrapper input {
    font-size: 26rpx;
    color: #444444;
    flex: 1;
}

.search-wrapper .search {
    margin: 0 41rpx 0 21rpx;
    width: 26rpx;
    height: 29rpx;
}

.search-wrapper .clear {
    width: 36rpx;
    height: 36rpx;
    margin: 0 20rpx;
}