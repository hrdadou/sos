.wrap {
    background: #fff;
    position: relative;
}

.swiper {
    width: 100%;
    height: 450rpx;
    background: #fff;
}

.swiper .slide-image {
    width: 94.6666%;
    height: 94.6666%;
    display: block;
    overflow: hidden;
    margin: auto;
    margin-top: 2.666%;
    border-radius: 10rpx;
}

.swiper .slide-image image {
    width: 100%;
    height: 100%;
    display: block;
}

.indicators {
    left: 50%;
    bottom: 70rpx;
    position: absolute;
    height: 6rpx;
    transform: translate3d(-50%,0,0);
}

.indicators .i {
    display: inline-block;
    width: 30rpx;
    height: 4rpx;
    margin: 0 5rpx;
    background: rgba(0,0,0,0.20);
}

.indicators .i.active {
    background: #fff;
}

.wrapper-limit {
    width: 702rpx;
    background: #fff;
    height: 70rpx;
    margin: auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.wrapper-limit .main {
    display: flex;
    align-items: center;
}

.wrapper-limit .main .i {
    width: 32rpx;
    height: 32rpx;
    margin-right: 10rpx;
}

.wrapper-limit .main .i image {
    width: 100%;
    display: block;
    height: 100%;
}

.wrapper-limit .main .span {
    font-size: 24rpx;
    color: #565656;
    text-align: right;
}

image {
    width: 32rpx;
    height: 32rpx;
    vertical-align: middle;
    margin-right: 10rpx;
}

.safe_wrap {
    display: flex;
    justify-content: space-between;
    padding: 20rpx 40rpx;
    background: #fff;
}

.icon {
    height: 32rpx;
    margin-bottom: 30rpx;
}

.icon text {
    padding-top: 5rpx;
    line-height: 37rpx;
    vertical-align: middle;
    color: #6d6d6d;
    font-size: 26rpx;
}

.zhi_sell {
    display: flex;
    justify-content: space-between;
    width: 100%;
    background: #fff;
    padding-bottom: 30rpx;
}

.zhi_sell view {
    display: flex;
    width: 268rpx;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
}

.zhi_sell view image {
    width: 120rpx;
    height: 120rpx;
}

.zhi_sell view text {
    display: block;
    font-size: 26rpx;
    color: #686868;
    text-align: center;
}

.assess {
    background: url("//img.rekoon.cn/newHome/sold_btn_evaluate.png") no-repeat;
    width: 336rpx;
    height: 120rpx;
    position: fixed;
    bottom: 20rpx;
    background-size: 336rpx;
    color: #fff;
    left: 50%;
    margin-left: -168rpx;
    line-height: 100rpx;
    text-align: center;
}

.over {
    width: 720rpx;
    height: 40rpx;
    background: url("//shop-img.rekoon.cn/img/end.png") no-repeat;
    background-size: 720rpx;
    margin: 50rpx auto;
}

.cut {
    width: 2rpx;
    height: 58rpx;
    background: #eee;
    margin-top: 25rpx;
}