.model {
    width: 590rpx;
    height: 320rpx;
    background: #fff;
    border-radius: 10rpx;
    position: fixed;
    top: 50%;
    margin-top: -160rpx;
    left: 50%;
    margin-left: -295rpx;
    padding-top: 20rpx;
}

.wrapper {
    width: 100vw;
    height: 100vh;
    background: rgba(0,0,0,.5);
}

.title {
    font-size: 32rpx;
    color: #565656;
    line-height: 100rpx;
    text-align: center;
}

.content {
    font-size: 27rpx;
    text-align: center;
    color: #808080;
    line-height: 40rpx;
}

.button-bottom {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 98rpx;
    display: flex;
    justify-content: space-between;
    box-shadow: 0 -1rpx 0 0 #E8E8E8;
}

.button-bottom view {
    width: 100%;
    line-height: 98rpx;
    text-align: center;
    font-size: 30rpx;
}

.button-bottom view:first-child {
    color: #666971;
    border-right: 1rpx solid #e8e8e8;
}

.button-bottom view:last-child {
    color: #6D84DD;
}