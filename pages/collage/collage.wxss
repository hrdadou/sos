.collage-wrap {
    width: 100%;
    background-color: #c41514;
    min-height: 100vh;
}

.active-infos {
    width: 50rpx;
    height: 220rpx;
    position: absolute;
    top: 140rpx;
    right: 21rpx;
}

.model-collage {
    position: fixed;
    width: 100%;
    height: 100vh;
    z-index: 99999;
    background: rgba(0,0,0,.5);
}

.close {
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    right: 0;
    top: -70rpx;
}

.close image {
    width: 100%;
    height: 100%;
    display: block;
}

.h2 {
    text-align: center;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 24rpx;
    color: #FFFFFF;
}

.model-collage .model-wrapper {
    width: 700rpx;
    height: 870rpx;
    position: absolute;
    left: 50%;
    margin-left: -350rpx;
    top: 50%;
    margin-top: -435rpx;
}

.model-collage .model-wrapper image {
    width: 100%;
    height: 100%;
    display: block;
}

.collage-top {
    width: 100%;
    height: 390rpx;
}

.collage-top image {
    width: 100%;
    height: 414rpx;
}

.top-down-arrow {
    width: 50rpx;
    height: 46rpx;
    margin: auto;
    margin-bottom: 20rpx;
}

@-webkit-keyframes bounce-down {
    0% {
        transform: translate(0px,0rpx);
    }

    50% {
        transform: translate(0px,-10rpx);
    }

    100% {
        transform: translate(0px,0rpx);
    }
}

@keyframes bounce-down {
    0% {
        transform: translate(0px,0rpx);
    }

    50% {
        transform: translate(0px,-10rpx);
    }

    100% {
        transform: translate(0px,0rpx);
    }
}

.animate-bounce-down {
    animation: bounce-down 1s linear infinite;
}

.top-down-arrow image {
    width: 100%;
    height: 100%;
}

.loginbutton .get-top {
    width: 430rpx;
    height: 94rpx;
    margin: auto;
    margin-top: 30rpx;
    display: block;
    font-size: 30rpx;
    color: #892727;
    background: #FFD89D;
    border-radius: 50rpx;
    text-align: center;
    line-height: 94rpx;
}

.collage-box {
    width: 610rpx;
    height: 746rpx;
    background: url("//img.rekoon.cn/collage/h5/next/pop_pic_redpage1000.png") no-repeat;
    margin-left: 70rpx;
    background-size: 610rpx 746rpx;
    padding-top: 230rpx;
}

.collage-box.isNewUser {
    background: url("https://img.rekoon.cn/collage/h5/next/pop_bg_redpage.png") no-repeat;
    height: 1110rpx;
    background-size: 610rpx 1016rpx;
}

.collage-box.isNewUserOver {
    padding-top: 320rpx;
    background: url("https://img.rekoon.cn/xcx/activity_detail_bg_redpage_open0.png") no-repeat;
    height: 1110rpx;
    background-size: 610rpx 1044rpx;
}

.user-avator {
    width: 85%;
    margin: auto;
    display: flex;
    justify-content: space-around;
}

.collage-box .icons {
    width: 72rpx;
    height: 72rpx;
    position: relative;
}

.collage-box .title {
    display: block;
    position: absolute;
    width: 82rpx;
    height: 36rpx;
    bottom: -18rpx;
    left: -5rpx;
}

.collage-box .icons .image {
    display: block;
    width: 100%;
    height: 100%;
    border-radius: 100rpx;
}

.collage-box .h1 {
    margin-top: 20rpx;
    text-align: center;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 24rpx;
    color: #FFFFFF;
}

.count-down {
    height: 40rpx;
}

.count-down .div {
    height: 40rpx;
    line-height: 40rpx;
    font-size: 24rpx;
    color: #fff;
    text-align: center;
}

.count-down .div .h1 {
    font-size: 24rpx;
    display: inline-block;
}

.count-down .div .span {
    display: inline-block;
    width: 40rpx;
    height: 40rpx;
    margin: 0 auto;
    background: #a50302;
    border-radius: 6rpx;
    font-size: 26rpx;
}

.btn-share {
    width: 430rpx;
    height: 94rpx;
    margin: auto;
    margin-top: 30rpx;
    display: block;
    font-size: 30rpx;
    color: #892727;
    background: #FFD89D;
    border-radius: 50rpx;
    text-align: center;
    line-height: 94rpx;
}

.border {
    background: rgba(0,0,0,0);
    border: 1rpx solid #FFD89D;
    color: #FFD89D;
}

.text-box {
    margin-bottom: 100rpx;
}

.text-box .h1 {
    text-align: center;
    height: 120rpx;
    line-height: 120rpx;
    font-size: 40rpx;
    color: #FFFFFF;
    margin: auto;
}

.text-box .span {
    display: inline-block;
}

.text-box .p {
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    font-size: 24rpx;
    color: #FFFFFF;
}

.text-box .use {
    margin-top: 20rpx;
    margin-left: 160rpx;
    width: 430rpx;
    height: 86rpx;
    background: #FFD89D;
    border-radius: 100rpx;
